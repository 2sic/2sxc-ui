{
  "compileOnSave": true,
  "compilerOptions": {
    //"outFile": "../../dist-test/inpage/inpage.min.js",
    "outDir": "compiled",
    "noEmitOnError": false,
    "noImplicitAny": true,
    //"noFallthroughCasesInSwitch": true,
    //"allowUnreachableCode": false,
    //"allowUnusedLabels": false,
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": true,
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015.promise",
      "es5",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/**/*.ts"
  ],
  "exclude": [
    "_reports",
    "bin",
    "compiled",
    "coverage",
    "dist",
    "docs",
    "lib",
    "node_modules",
    "obj"
  ]
}

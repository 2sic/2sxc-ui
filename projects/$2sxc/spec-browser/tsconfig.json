{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    //"noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017", "ES2021.String", "dom"],
    "outDir": "../spec-browser-compiled",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
